pipeline {
    agent any

    stages {

        stage('Build') {
            steps {
                echo 'Building the application'
                
            }
        }

        stage('Test Parallel') {
            parallel {
                stage('Test') {
                    steps {
                        echo ' Running tests'
                        
                    }
                }

                stage('Test_SIT') {
                    steps {
                        echo 'Running SIT tests'
                       
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application'
                
            }
        }

    }
}
